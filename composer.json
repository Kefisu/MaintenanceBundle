{
    "name": "kefisu/maintenance-bundle",
    "description": "A Symfony Bundle that allows you to put your application into maintenance mode.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Jansen",
            "email": "kevin@jansen.fyi"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "symfony/framework-bundle": "6.* || 7.*",
        "symfony/console": "6.* || 7.*"
    },
    "autoload": {
        "psr-4": {
            "Kefisu\\Bundle\\MaintenanceBundle\\": "src/"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.* || 7.*"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": "^5.26"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src/",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR12 src/"
    }
}
